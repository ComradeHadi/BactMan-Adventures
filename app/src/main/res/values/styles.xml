<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AppTheme.Activity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>

        <item name="android:orientation">vertical</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="AppTheme.Activity.Menu">
        <item name="android:background">@android:color/holo_green_dark</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="AppTheme.Activity.Detail">
        <item name="android:layout_height">wrap_content</item>

        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.Container.Title">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">24</item>
    </style>

    <style name="AppTheme.Container.Button">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">19</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.Container.Paragraphs">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>

        <item name="android:textColor">@color/softBlack</item>
    </style>

    <style name="AppTheme.TextView.Title">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme.TextView.Subtitle">
        <item name="android:layout_marginBottom">20dp</item>

        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.TextView.Paragraphs">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>

        <item name="android:background">@drawable/button_menu</item>
        <item name="android:shadowColor">@color/lightGreen</item>

        <item name="android:textColor">@color/button_menu_text</item>
        <item name="android:textColorHighlight">@color/lightGreen</item>
    </style>

    <style name="AppTheme.ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.ImageView.FullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="AppTheme.ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
