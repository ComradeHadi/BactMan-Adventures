<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AppTheme.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>

        <item name="android:orientation">vertical</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="AppTheme.Layout.Menu">
        <item name="android:weightSum">100</item>
    </style>

    <style name="AppTheme.Layout.Menu.Home">

        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>

    </style>

    <style name="AppTheme.Layout.Detail">
        <item name="android:layout_height">wrap_content</item>

        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.Layout.Carousel">
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.Container.Title">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AppTheme.Container.Title.Menu">
        <item name="android:background">@color/titleBox</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">28</item>
    </style>

    <style name="AppTheme.Container.Button">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">18</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.Container.Button.3">
        <item name="android:layout_weight">24</item>
    </style>

    <style name="AppTheme.Container.Paragraphs">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>

        <item name="android:textColor">@color/softBlack</item>
    </style>

    <style name="AppTheme.TextView.Title">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme.TextView.Title.Home">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:padding">0dp</item>

        <item name="android:textColor">@color/softWhite</item>
    </style>

    <style name="AppTheme.TextView.Subtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="AppTheme.TextView.Subtitle.Home">
        <item name="android:textColor">@color/softWhite</item>
    </style>

    <style name="AppTheme.TextView.Paragraphs">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.TextView.Paragraphs.Credits">
        <item name="android:gravity">center</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>

        <item name="android:background">@drawable/button_menu</item>
        <item name="android:shadowColor">@color/ionisTurquoise</item>

        <item name="android:textColor">@color/button_menu_text</item>
        <item name="android:textColorHighlight">@color/ionisTurquoise</item>
    </style>

    <style name="AppTheme.Button.Home">
        <item name="android:textColor">@color/button_menu_text_home</item>
        <item name="android:textColorHighlight">@color/ionisTurquoise</item>
    </style>

    <style name="AppTheme.ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.ImageView.FullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/content_fullwidth</item>
    </style>

    <style name="AppTheme.ImageView.Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/content_background</item>
    </style>

    <style name="AppTheme.ImageView.Background.Texts">
        <item name="android:src">@drawable/background_texts</item>
    </style>

    <style name="AppTheme.ImageView.Background.Menus">
        <item name="android:src">@drawable/background_menu</item>
    </style>

    <style name="AppTheme.ImageView.Carousel">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">@dimen/carouselImageMaxSize</item>
        <item name="android:maxWidth">@dimen/carouselImageMaxSize</item>
        <item name="android:paddingBottom">30dp</item>
    </style>

    <style name="AppTheme.ImageView.Icon">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/content_icon</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.TextView.Link" parent="AppTheme.TextView.Paragraphs">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_below">@id/paragraphs</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#4105ff</item>

        <item name="android:clickable">true</item>
    </style>

</resources>
