<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AppTheme.ActivityMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/holo_green_dark</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="AppTheme.ContainerTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">24</item>
        <item name="tools:ignore">InefficientWeight,Suspicious0dp</item> <!-- IDE does not see the style weightSum-->
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AppTheme.TextView.Title">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme.TextView.Subtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:shadowColor">@color/lightGreen</item>
        <item name="android:textColorHighlight">@color/lightGreen</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="AppTheme.ButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">19</item>
    </style>

</resources>
