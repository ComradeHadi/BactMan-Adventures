<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                tools:context="fr.plnech.igem.ui.iGEMActivity"
                style="@style/AppTheme.Layout">
    <ImageView style="@style/AppTheme.ImageView.Background.Menus"/>
    <LinearLayout style="@style/AppTheme.Layout.Menu">
        <RelativeLayout style="@style/AppTheme.Container.Title.Menu">

            <TextView style="@style/AppTheme.TextView.Title"
                      android:text="@string/igem_title"
                      android:id="@+id/menu_title"/>

            <TextView style="@style/AppTheme.TextView.Subtitle"
                      android:text="@string/igem_subtitle"
                      android:id="@+id/menu_subtitle"
                      android:layout_below="@id/menu_title"/>
        </RelativeLayout>
        <RelativeLayout style="@style/AppTheme.Container.Button">
            <Button style="@style/AppTheme.Button"
                    android:text="@string/label_igem_what"
                    android:id="@+id/button_igem_what"/>
        </RelativeLayout>

        <RelativeLayout style="@style/AppTheme.Container.Button">
            <Button style="@style/AppTheme.Button"
                    android:text="@string/label_igem_biology"
                    android:id="@+id/button_igem_biology"/>
        </RelativeLayout>

        <RelativeLayout style="@style/AppTheme.Container.Button">
            <Button style="@style/AppTheme.Button"
                    android:text="@string/label_igem_biobricks"
                    android:id="@+id/button_igem_biobricks"/>
        </RelativeLayout>

        <RelativeLayout style="@style/AppTheme.Container.Button">
            <Button style="@style/AppTheme.Button"
                    android:text="@string/label_igem_partners"
                    android:id="@+id/button_igem_partners"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
