<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/AppTheme.Layout">
    <ImageView style="@style/AppTheme.ImageView.Background.Texts"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/AppTheme.ScrollView">

        <RelativeLayout style="@style/AppTheme.Layout.Detail"
                        tools:context="fr.plnech.igem.ui.WhatActivity">

            <ImageView style="@style/AppTheme.ImageView.FullWidth"
                       android:id="@+id/mainPic"
                       android:src="@drawable/people"
                       android:contentDescription="@string/igem_title"/>

            <RelativeLayout style="@style/AppTheme.Container.Title"
                            android:padding="0dp" android:layout_margin="0dp"
                            android:id="@+id/box_title"
                            android:layout_below="@id/mainPic">

                <TextView style="@style/AppTheme.TextView.Subtitle"
                          android:visibility="gone"
                          android:text="@string/what_subtitle"
                          android:id="@+id/what_subtitle"/>
            </RelativeLayout>

            <RelativeLayout style="@style/AppTheme.Container.Paragraphs"
                            android:layout_below="@id/box_title">

                <TextView style="@style/AppTheme.TextView.Paragraphs"
                          android:text="@string/text_igem"
                          android:id="@+id/paragraphs"/>

                <TextView style="@style/AppTheme.TextView.Link"
                          android:text="@string/what_link"
                          android:id="@+id/link"/>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
